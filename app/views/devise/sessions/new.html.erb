<%= stylesheet_link_tag "style2.css" %>

<div class="modal-content animate">
<h2 class="frasesign">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, id:"labelr" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",name:"email",id:"email" %>
  </div>

  <div class="field">
    <%= f.label :password, id:"labelr" %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, id:"labelr" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", id:"button2" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>
